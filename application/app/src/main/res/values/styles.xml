<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppButton" parent="Theme.SongQuiz">
        <item name="android:layout_marginStart">@dimen/button_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_small</item>
        <item name="android:layout_marginTop">@dimen/button_margin_big</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_big</item>
        <item name="android:paddingTop">@dimen/button_padding_big</item>
        <item name="android:paddingBottom">@dimen/button_padding_big</item>
        <item name="android:paddingStart">@dimen/button_padding_small</item>
        <item name="android:paddingEnd">@dimen/button_padding_small</item>
        <item name="android:textStyle">bold</item>
        <item name="tint">@color/colorLightOnDarkBackground</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="FAB" parent="Theme.SongQuiz">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="tint">@color/colorLightOnDarkBackground</item>
        <item name="android:layout_marginStart">@dimen/button_margin_big</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_big</item>
        <item name="android:layout_marginTop">@dimen/button_margin_big</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_big</item>
        <item name="android:contentDescription">@string/fabDescription</item>
    </style>

    <style name="ImageButton" parent="Theme.SongQuiz">
        <item name="android:layout_marginStart">@dimen/button_margin_big</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_big</item>
        <item name="android:layout_marginTop">@dimen/button_margin_big</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_big</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:minWidth">@dimen/img_button_size</item>
        <item name="android:minHeight">@dimen/img_button_size</item>
    </style>

    <style name="MainImage" parent="Theme.SongQuiz">
        <item name="android:layout_marginStart">@dimen/button_margin_big</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_big</item>
        <item name="android:layout_marginTop">@dimen/button_margin_big</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_big</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/MainImageDescription</item>
    </style>

    <style name="ListImage" parent="MainImage">
        <item name="android:layout_margin">@dimen/list_item_small_margin</item>
        <item name="android:contentDescription">@string/ListImageDescription</item>
    </style>

    <style name="SongPlayProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:max">@integer/progressbar_max_value</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/progressbar_time</item>
        <item name="android:layout_marginTop">@dimen/button_margin_big</item>
    </style>

    <style name="ParagraphText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/paragraph_text_size</item>
        <item name="android:fontFamily">@font/font_paragraph</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">@dimen/paragraph_margin</item>
        <item name="android:layout_marginStart">@dimen/paragraph_margin</item>
        <item name="android:layout_marginEnd">@dimen/paragraph_margin</item>
        <item name="android:layout_marginBottom">@dimen/paragraph_margin</item>
        <item name="android:paddingTop">@dimen/paragraph_padding</item>
        <item name="android:paddingStart">@dimen/paragraph_padding</item>
        <item name="android:paddingEnd">@dimen/paragraph_padding</item>
        <item name="android:paddingBottom">@dimen/paragraph_padding</item>
    </style>

    <style name="SubtitleText" parent="ParagraphText">
        <item name="android:textColor">@color/colorTextSubtitle</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:fontFamily">@font/font_subtitle</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/font_title</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:layout_margin">@dimen/title_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="FancyText" parent="TitleText">
        <item name="android:fontFamily">@font/font_fancy</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="InputText" parent="ParagraphText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonLabel" parent="ParagraphText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="MessageBox" parent="ParagraphText">
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/message_box</item>
        <item name="android:layout_marginTop">@dimen/messagebox_margin</item>
        <item name="android:layout_marginBottom">@dimen/messagebox_margin</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>