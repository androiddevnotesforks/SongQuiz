<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ProgressBar
        style="@style/SongPlayProgressBar"
        android:id="@+id/songPlayProgressBar"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivPlaylist"
        app:layout_constraintEnd_toEndOf="@+id/ivPlaylist" />

    <ImageView
        style="@style/MainImage"
        android:id="@+id/ivPlaylist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/icon_album"
        app:layout_constraintDimensionRatio="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/glVerticalMiddle"
        app:layout_constraintTop_toBottomOf="@+id/songPlayProgressBar"
        app:layout_constraintBottom_toTopOf="@+id/adQuiz"/>

    <TextView
        style="@style/SparseParagraphText"
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:scrollbars="vertical"
        android:background="@drawable/messagebox_output"
        android:paddingStart="@dimen/messagebox_inner_padding"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ttsSpeechButton"
        app:layout_constraintTop_toBottomOf="@+id/songPlayProgressBar"
        app:layout_constraintBottom_toTopOf="@+id/tvRecognition" />

    <TextView
        style="@style/SparseParagraphText"
        android:id="@+id/tvRecognition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:scrollbars="vertical"
        android:background="@drawable/messagebox_input"
        android:paddingEnd="@dimen/messagebox_inner_padding"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/userSpeechButton"
        app:layout_constraintStart_toEndOf="@+id/glVerticalMiddle"
        app:layout_constraintTop_toBottomOf="@+id/glHorizontalMiddle"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glVerticalMiddle"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glHorizontalMiddle"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="horizontal"/>

    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/ImageButton"
        android:id="@+id/ttsSpeechButton"
        android:src="@drawable/icon_sound_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/tvInfo"
        app:layout_constraintStart_toStartOf="@+id/glVerticalMiddle"/>

    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/ImageButton"
        android:id="@+id/userSpeechButton"
        android:src="@drawable/icon_mic_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRecognition"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adQuiz"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/glVerticalMiddle"
        ads:adSize="BANNER"
        ads:adUnitId="@string/quiz_ad_id" />

    <ProgressBar
        android:id="@+id/loadIndicatorProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>