<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlist_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/playlist_item_small_margin">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="@dimen/playlist_item_image_size"
        android:layout_height="@dimen/playlist_item_image_size"
        android:layout_margin="@dimen/playlist_item_small_margin"
        android:contentDescription="@string/PlaylistImageDescription"
        android:src="@drawable/icon_album"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/playlist_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/playlist_item_small_margin"
        android:maxLines="1"
        android:theme="@style/SubtitleText"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintStart_toEndOf="@+id/playlist_image"
        app:layout_constraintEnd_toStartOf="@+id/playlist_add"
        app:layout_constraintTop_toTopOf="@+id/playlist_image"/>

    <TextView
        android:id="@+id/playlist_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/playlist_item_small_margin"
        android:maxLines="1"
        android:theme="@style/ParagraphText"
        app:layout_constraintStart_toEndOf="@+id/playlist_image"
        app:layout_constraintEnd_toStartOf="@+id/playlist_add"
        app:layout_constraintTop_toBottomOf="@+id/playlist_title"
        app:layout_constraintBottom_toTopOf="@+id/playlist_owner"/>

    <TextView
        android:id="@+id/playlist_owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/playlist_item_small_margin"
        android:maxLines="1"
        android:theme="@style/ParagraphText"
        app:layout_constraintStart_toEndOf="@+id/playlist_image"
        app:layout_constraintEnd_toStartOf="@+id/playlist_add"
        app:layout_constraintBottom_toBottomOf="@+id/playlist_image"/>

    <com.arpadfodor.android.songquiz.view.utils.AppPositiveButton
        android:id="@+id/playlist_add"
        android:layout_width="@dimen/playlist_item_button_size"
        android:layout_height="@dimen/playlist_item_button_size"
        android:layout_margin="@dimen/playlist_item_margin"
        android:contentDescription="@string/PlaylistImageDescription"
        android:text="@string/unicode_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>