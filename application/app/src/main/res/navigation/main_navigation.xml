<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/nav_playlists">

    <fragment
        android:id="@+id/nav_playlists"
        android:name="com.arpadfodor.android.songquiz.view.PlaylistsFragment"
        android:label="@string/menu_playlists"
        tools:layout="@layout/fragment_playlists" >
        <action
            android:id="@+id/action_nav_playlists_to_nav_about2"
            app:destination="@id/nav_about" />
    </fragment>

    <fragment
        android:id="@+id/nav_about"
        android:name="com.arpadfodor.android.songquiz.view.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_nav_about_to_nav_playlists2"
            app:destination="@id/nav_playlists" />
    </fragment>

</navigation>